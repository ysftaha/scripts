#!/bin/sh
# controls the volume through pulsemixer.

mute=
case $1 in
	up)
		pulsemixer --change-volume +1 
		;;
	down) 
		pulsemixer --change-volume -1 
		;;
	mute) 
		pulsemixer --toggle-mute 
		[ `pulsemixer --get-mute` = 1 ] \
		&& mute=muted \
		|| mute=unmuted
		;;
esac


